<div class="row">
  <div class="col-sm-offset-1 col-md-offset-2 col-sm-10 col-md-8">
    <h1>User debt overview</h1>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Drink debt</th>
          <th>Snack debt</th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
        <td><%= user.name %></td>
        <td><%= user.drink_credits < 0 ? number_to_currency(user.drink_to_money, unit: '&euro;') : 'No debt' %></td>
        <td><%= user.snack_credits < 0 ? number_to_currency(user.snack_to_money, unit: '&euro;') : 'No debt' %></td>
      </tr>
    <% end %>
      </tbody>
    </table>
  </div>
</div>
