<div class="row">
  <div class="well text-center">
    <p class="lead">Please <strong>create an account</strong> to track your debt</p>
      <%= form_for @user, url: sign_up_path do |f| %>
        <div class="input-group form-group <%= "has-error" if @user.errors[:name].present? %>">
          <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
          <span class="input-group-addon"><i class="fa fa-tag"></i></span>
        </div>
        <div class="input-group form-group <%= "has-error" if @user.errors[:email].present? %>">
          <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
          <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
        </div>
        <div class="input-group form-group <%= "has-error" if @user.errors[:password].present? %>">
          <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
          <span class="input-group-addon"><i class="fa fa-unlock"></i></span>
        </div>
        <div class="form-group">
          <%= button_tag "Sign Up", class: 'btn btn-block btn-info' %>
        </div>
        <%= link_to "Allready have an account? Log in here", login_path%>
      <% end %>
  </div>
</div>

