<div class="row">
  <div class="offset3 span6 well text-center">
    <h1>Login</h1>
    <%= simple_form_for :user, url: login_path do |f| %>
      <%= f.input :email, label: false, wrapper: :append do %>
        <%= f.input_field :email, placeholder: 'Email', class: 'input-xlarge' %>
        <%= content_tag :span, "", :class => "icon-envelope-alt add-on" %>
      <% end %>
      <%= f.input :password, label: false, wrapper: :append do %>
        <%= f.password_field :password, placeholder: 'Password', class: 'input-xlarge' %>
        <%= content_tag :span, "", :class => "icon-asterisk add-on" %>
      <% end %>
      <div class="control-group span4 remove-margin clearfix" style="margin-left: 85px;">
        <div class="pull-left">
          <%= link_to "Create account", sign_up_path%>
        </div>
        <div class="btn-group pull-right">
          <%= button_tag(type: 'submit', class: 'btn btn-success pull-right') do %>
            <i class="icon-arrow-right"></i> Login
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
