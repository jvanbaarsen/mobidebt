<div class="well text-center">
  <p class="lead">Please <strong>login</strong> to manage your debt</p>
      <%= form_for :user, url: login_path do %>
        <div class="input-group form-group">
          <%= text_field_tag :email, nil, class: 'form-control', placeholder: 'Email' %>
          <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
        </div>
        <div class="input-group form-group">
          <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password' %>
          <span class="input-group-addon"><i class="fa fa-unlock" style="width: 14px !important;"></i></span>
        </div>
        <div class="form-group">
          <%= button_tag "Sign In", class: 'btn btn-block btn-info' %>
        </div>
        <%= link_to "Dont have an account? Create one today!", sign_up_path%>
      <% end %>
</div>
